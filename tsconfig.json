{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "./build",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"allowJs": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
    "esModuleInterop": true 
	},
    "include": [
        "src/**/*.ts"
    ],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
